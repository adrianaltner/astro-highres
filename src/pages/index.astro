---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Highres">
    <style>
        /* Custom scrollbar hiding */
        .no-scrollbar::-webkit-scrollbar {
            display: none; /* Hides scrollbar for Chrome, Safari, and Edge */
        }

        .no-scrollbar {
            -ms-overflow-style: none; /* Hides scrollbar for Internet Explorer and Edge */
            scrollbar-width: none; /* Hides scrollbar for Firefox */
        }
    </style>

    <main>
        <!-- Outer container with black border -->
        <div class="relative w-[calc(100vw-60px)] h-[calc(100vh-60px)] border border-black overflow-hidden">

            <!-- Scrollable container -->
            <div class="flex overflow-x-auto w-full h-full snap-x snap-mandatory scroll-smooth no-scrollbar">
                <!-- First image container -->
                <div id="section1" class="min-w-full h-full snap-start relative flex justify-center items-center">
                    <img src="123.webp" alt="First Image" class="absolute inset-0 w-full h-full object-cover">
                    <div class="absolute bottom-4 left-4 text-white bg-black bg-opacity-50 p-4 rounded">
                        <h1 class="text-3xl font-bold">First Section Content</h1>
                        <p class="mt-4">This is some content over the first image.</p>
                    </div>
                    <!-- Right navigation arrow -->
                    <a href="#section2" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white rounded-full p-2 hover:bg-gray-700 transition">
                        &rarr;
                    </a>
                </div>

                <!-- Second image container -->
                <div id="section2" class="min-w-full h-full snap-start relative flex justify-center items-center">
                    <img src="345.webp" alt="Second Image" class="absolute inset-0 w-full h-full object-cover">
                    <div class="absolute bottom-4 left-4 text-white bg-black bg-opacity-50 p-4 rounded">
                        <h1 class="text-3xl font-bold">Second Section Content</h1>
                        <p class="mt-4">This is some content over the second image.</p>
                    </div>
                    <!-- Left navigation arrow -->
                    <a href="#section1" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white rounded-full p-2 hover:bg-gray-700 transition">
                        &larr;
                    </a>
                    <!-- Right navigation arrow -->
                    <a href="#section3" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white rounded-full p-2 hover:bg-gray-700 transition">
                        &rarr;
                    </a>
                </div>

                <!-- Third image container -->
                <div id="section3" class="min-w-full h-full snap-start relative flex justify-center items-center">
                    <img src="345.webp" alt="Third Image" class="absolute inset-0 w-full h-full object-cover">
                    <div class="absolute bottom-4 left-4 text-white bg-black bg-opacity-50 p-4 rounded">
                        <h1 class="text-3xl font-bold">Third Section Content</h1>
                        <p class="mt-4">This is some content over the third image.</p>
                    </div>
                    <!-- Left navigation arrow -->
                    <a href="#section2" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white rounded-full p-2 hover:bg-gray-700 transition">
                        &larr;
                    </a>
                    <!-- Right navigation arrow -->
                    <a href="#section4" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white rounded-full p-2 hover:bg-gray-700 transition">
                        &rarr;
                    </a>
                </div>

                <!-- Fourth image container -->
                <div id="section4" class="min-w-full h-full snap-start relative flex justify-center items-center">
                    <img src="345.webp" alt="Fourth Image" class="absolute inset-0 w-full h-full object-cover">
                    <div class="absolute bottom-4 left-4 text-white bg-black bg-opacity-50 p-4 rounded">
                        <h1 class="text-3xl font-bold">Fourth Section Content</h1>
                        <p class="mt-4">This is some content over the fourth image.</p>
                    </div>
                    <!-- Left navigation arrow -->
                    <a href="#section3" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white rounded-full p-2 hover:bg-gray-700 transition">
                        &larr;
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>